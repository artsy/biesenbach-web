.carousel-track__image
  width 100%
  margin-bottom 40px
  figcaption
    font-size 15px
    color gray
    line-height 1.5

.carousel-figure-img
  width 100%
  height 54vw
  background-size cover
  background-position center center

figure.slide-images
  display none
  width 100%
  margin 0px

figure.slide-images div
  width 100%
  margin-top 40px
  margin-bottom 15px

.carousel-track__image .slideshow-is-active
  display block

@media (min-width 481px)
  .carousel-track__image
    margin-bottom 0px

  .carousel-figure-img
    width 100%
    height 54vw
    background-size cover
    background-position center center

  figure.slide-images
    display none
    width 100%
    margin 0px

  figure.slide-images div
    width 100%
    max-height 400px
    margin-top 40px
    margin-bottom 15px

  .carousel-track__image .slideshow-is-active
    display block